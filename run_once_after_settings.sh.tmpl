{{- if eq .chezmoi.os "darwin" -}}
#!/usr/bin/env bash
set -eo pipefail

# Git Settings
git secrets --install "$XDG_CONFIG_HOME/git/templates/git-secrets"
git config --global init.templatedir "$XDG_CONFIG_HOME/git/templates/git-secrets"
# AWSの保護
git secrets --register-aws --global
# GCPの保護
git secrets --add 'private_key' --global
git secrets --add 'private_key_id' --global

# install package (pipx)
# pipx
pipx install aws-sam-cli
pipx install awscli-local
pipx install cfn-lint
pipx install poetry
pipx install terraform-local

{{ end -}}
